<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/btn1"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:text="3" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn4"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:text="6" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn7"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:text="9" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnClear"
                android:text="Clear" />

            <Button
                android:id="@+id/btn0"
                android:text="0" />

            <Button
                android:id="@+id/btnSubmit"
                android:text="Submit" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
